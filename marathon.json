{
  "id": "/tva/worker",
  "instances": 1,
  "cpus": 0.1,
  "mem": 256,
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "maxLaunchDelaySeconds": 3600,
  "labels": {
    "owner": "tva",
    "HAPROXY_DEPLOYMENT_GROUP": "tva_worker",
    "HAPROXY_DEPLOYMENT_ALT_PORT": "10019"
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "quay.io/kato/tva-worker:latest",
      "network": "BRIDGE",
      "portMappings": [
        { "containerPort": 80, "hostPort": 0, "servicePort": 10018 }
      ],
      "privileged": false,
      "forcePullImage": true
    }
  },
  "healthChecks": [
    {
      "protocol": "COMMAND",
      "command": { "value": "true" },
      "gracePeriodSeconds": 120,
      "intervalSeconds": 30,
      "timeoutSeconds": 5,
      "maxConsecutiveFailures": 3
    }
  ],
  "upgradeStrategy": {
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 1
  }
}
